<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="report_saleorder_document_header_page"
        inherit_id="sale.report_saleorder_document"
    >
      <xpath expr="//div[@id='informations']" position="after">
        <div
                class="page"
                t-if="doc.header_page and doc.header_page != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'"
                style="page-break-after: always;"
            >
            <span t-field="doc.header_page" />
        </div>
      </xpath>

    </template>

</odoo>
